# DO NOT COMMIT REAL KEYS. Set locally only.
OPENAI_API_KEY=__SET_IN_LOCAL_ENV__
CHAT_MODEL=gpt-5-mini
EMBED_MODEL=text-embedding-3-small

CHROMA_PATH=./data/chroma
COLLECTION_NAME=hsd_ei

# CI / Demo
USE_FAKE_EMBEDDINGS=1
CHROMA_DISABLE_TELEMETRY=1

# Hybrid arama ağırlığı (0..1) — 1: embedding, 0: keyword
HYBRID_ALPHA=0.6

# OCR fallback ayarları
OCR_ENABLE=1           # 1: açık, 0: kapalı
OCR_LANGS=deu+eng      # Tesseract dilleri (örn: deu, eng, deu+eng)
OCR_MIN_CHARS=30       # pypdf sayfadan < bu kadar karakter gelirse OCR dene
OCR_RENDER_SCALE=2.0   # sayfayı x2 çözünürlükte render et
